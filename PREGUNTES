function checkAnswer() {
    const answer = document.getElementById('answer').value;
    const correctAnswer = "respuesta_correcta"; // Cambia esto por la respuesta correcta

    if (answer === correctAnswer) {
        alert("¡Correcto! Puedes abrir tu regalo.");
        // Código para pasar al siguiente regalo
    } else {
        alert("Respuesta incorrecta. Inténtalo de nuevo.");
    }
}
